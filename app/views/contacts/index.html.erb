<h1>Your Contacts</h1>
<br>
<div class="hero-unit">
	<td><%= link_to "New Contact", new_contact_path, 
					                        class: "btn btn-primary btn-success" %></td>
	<br><br>
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>View Detail</th>
	  			<th>First Name</th>
	  			<th>Last Name</th>
	  			<th>Email</th>
	  			<th>Monthly Bill</th>
	  		</tr>
	  	</thead>
	  	<% Contact.all.each do |x| %>
		  	<tbody>
		  		<tr>
		  			<td><%= link_to "View", contact_path(x), 
					                        class: "btn btn-primary btn-primary" %>
					<%= link_to "Edit", edit_contact_path(x), 
					                        class: "btn btn-primary btn-primary" %></td>
			  		<td><%= x.first_name %></td>
			  		<td><%= x.last_name %></td>
			  		<td><%= x.email %></td>
			  		<td><%= number_to_currency(x.bill_amount) %></td>
			  	</tr>
		  	</tbody>
		<% end %>
	</table>
</div>